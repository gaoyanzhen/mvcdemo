<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.gyz.dao.IUserDao">
    <select id="countAll" resultType="int">
        select count(*) c from tuser;
    </select>
    <select id="getUsername" parameterType="String" resultType="String">
        select name from tuser where id= #{id};
    </select>
     <insert  id="addUser" parameterType="com.gyz.po.User" useGeneratedKeys="true" keyProperty="id">
       insert into tuser(name,password,age,address) values(#{name},#{password},#{age},#{address})
    </insert >
    <select id="getUserByName" parameterType="String" resultType="com.gyz.po.User">
        select * from tuser where name= #{name};
    </select>
    <select id="getAllUsers" resultType="com.gyz.po.User">
       SELECT id, name, password, age, address FROM tuser ORDER BY id asc;
    </select>
    <select id="getUserByPage"  parameterType="int" resultType="com.gyz.po.User">
     <![CDATA[   
   		SELECT * FROM
			(SELECT *,ROW_NUMBER() OVER(ORDER BY id) AS 'RowNumber' FROM tuser) a 
   			WHERE a.RowNumber > #{0} AND a.RowNumber<= #{1};
   	 ]]>
    </select>
    <select id="deleteUser" parameterType="String">
       	DELETE FROM tuser WHERE id=#{userId};
    </select>
    <select id="getUserById" parameterType="String" resultType="com.gyz.po.User">
       	SELECT id, name, password, age, address FROM tuser WHERE id=#{id};
    </select>
    <select id="updateUser" parameterType="com.gyz.po.User">
       	UPDATE tuser SET name = #{name}, password = #{password}, age = #{age}, address = #{address} where id=#{id};
    </select>
</mapper>